# This script prints the following system information:
# 1. Hostname    2. Operating system     3. Kernel release and version.


#!/bin/bash

echo 
echo "1. Hostname: $(hostname)"

echo
echo "2. Operating System: $(uname -o)"                   # uname -o: Displays the operating system type


echo
echo "3.1 Kernel Version: $(uname -r)"
echo "3.2 Kernel Version: $(uname -v)"


#According to the man page: 
# uname -r : prints the kernel release.                                                             
# uname -v : prints the kernel version.

